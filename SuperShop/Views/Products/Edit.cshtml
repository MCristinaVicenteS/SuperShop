@model SuperShop.Models.ProductViewModel;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/from-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" /> @*o id passa escondido para o user -> mas preciso dele para o update*@
            <input type="hidden" asp-for="ImageId" /> @*o url passa escondido para o user -> mas preciso dele para o update*@

            <partial name = "_Products"/>
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> @*qd clico no botão submit -> faz o POST do Edit -> controller*@
                <a asp-action="Index"  class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">        
            <img src="@Url.Content(Model.ImageFullPath)" alt ="Image" style="width:300px;height:450px;max-width:100%;height:auto">@*adicionar a imagem*@           
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationCurrencyPartial");}
}
