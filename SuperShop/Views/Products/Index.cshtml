@model IEnumerable<SuperShop.Data.Entities.Product> //recebe uma lista de produtos -> inumerable

@{
    ViewData["Title"] = "Index";
}

@*insere uma biblioteca*@
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css"/>

<br />

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-save"></i>Create New</a> @*chama a action create qd carrego no botão*@
</p>

<div class="row">
    <div class="col-md-12">
        <div class="fa-panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Products</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ImageId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastPurchase)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastSale)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastSale)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsAvailable)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Stock)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageFullPath))
                                    {
                                        <img src="@Url.Content(item.ImageFullPath)" alt="Image">
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastPurchase)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastSale)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsAvailable)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Stock)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
   
                        
    
@section Scripts{
    <script src = "https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src = "https://cdn.datatables.net/1.10.25/js/dataTables.boostrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable'.DataTable();        
        });    
    </script>
}